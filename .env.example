# Notion API credentials
NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Notion blog configuration
NOTION_BLOG_DATABASE_ID=your_notion_blog_database_id_here

# Notion PDF form database ID
PDF_FORM_DATABASE_ID=your_pdf_form_database_id_here

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google Gemini AI Configuration
# IMPORTANT: Never commit your actual API key to version control!
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# Environment
NODE_ENV=development

# Resend Email Configuration
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@femtechweekend.com
# Multiple admin emails separated by comma
ADMIN_EMAILS=admin1@example.com,admin2@example.com

# Newsletter Double Opt-in Configuration
# Token secret for HMAC signing (generate with: openssl rand -hex 32)
NEWSLETTER_TOKEN_SECRET=your_secure_random_secret_here
# Site URL for confirmation email links
SITE_URL=https://www.femtechweekend.com

# Cloudflare Turnstile Configuration (Optional anti-bot protection)
# Get keys from: https://dash.cloudflare.com/turnstile
TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Admin API Protection
ADMIN_API_KEY=your_admin_api_key_here